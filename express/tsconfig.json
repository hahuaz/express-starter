{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // for decorators. typeorm uses them
    "emitDecoratorMetadata": true, // for decorators. typeorm uses them

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  // following allows to use `@` alias in ts-node
  // Do not forget to `npm i -D tsconfig-paths`
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
